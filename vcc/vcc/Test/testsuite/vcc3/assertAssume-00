  x=1;y=2;z=3;
  _(assert x+y==z)
}

void AssumeLocalTestOk(){ int x,y,z;
  _(assume x==1)
  _(assume y==2)
  _(assume z==3)
  _(assert x+y==z)
}

void AssertTestFails()
{
  _(assert \false)
}
