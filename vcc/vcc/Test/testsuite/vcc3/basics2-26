#include "vcc.h"

void foo(unsigned *a, unsigned n)
	_(writes \array_range(a,n))
{
	unsigned i;
	_(ghost unsigned j)

	for (i = 0; i < n; i++)
		_(invariant unsigned j; j < n; a[i]==0) // syntactically wrong (quantifier missing)
		a[i] = 0;
}
`
testcase(10,15) : error VC0000: Invalid expression term 'unsigned'.
`
