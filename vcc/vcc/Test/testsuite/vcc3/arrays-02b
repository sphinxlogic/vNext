void use2()
{
  int *x;

  x = malloc(sizeof(int) * 100);

  donothing();
  set0(x, 100);
  donothing();
  set0(x, 50);
  donothing();
  set0(&x[10], 90);
  donothing();

  free(as_array(x, 100));
}
*/
