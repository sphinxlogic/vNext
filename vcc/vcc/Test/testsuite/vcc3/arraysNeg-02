#include "vcc.h"

void setk(int *p, size_t sz)
  _(requires \mutable_array(p, sz))
  _(writes \array_range(p, sz - 1)) // ERR
{
  size_t i;

  i = 0;
  while (i < sz) 
    _(invariant i >= 0)
  {
    p[i] = _(unchecked)((int)i);
    i = i + 1;
  }
}
