#include "vcc.h"

int sumup(int *p, int sz)
  _(requires \thread_local_array(p, (size_t)sz))
{
  int i;
  int sum;

  sum = 0;
  i = -1; // ERR
  while (i < sz) 
  //  invariant (i >= 0)
  {
    sum = _(unchecked)(sum + p[i]);
    i = i + 1;
  }

  return sum;
}
`
