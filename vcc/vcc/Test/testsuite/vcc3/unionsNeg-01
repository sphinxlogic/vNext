  struct A x;
  struct IntWrap y;
  struct PtrWrap z;
};

void reint(union B *b)
  _(requires b->\valid)
  _(writes \extent(b))
{
  _(union_reinterpret &b->y);
  b->y.i = 7;
  _(assert b->y.i == 7)
  _(union_reinterpret &b->z);
  _(union_reinterpret &b->x);
  _(assert b->x.a == 7)
}
