#include <vcc.h>

_(type \pSeed)
_(typedef \integer pID)

_(datatype pSeedSet {
    case pSeedEmpty();
    case pGENedCons(\pSeed,pID,pSeedSet); })

_(def \bool pGENed(\pSeed s, pID i, pSeedSet L)
  _(decreases \size(L))
  { switch (L) {
      case pSeedEmpty():
        return \false;
      case pGENedCons(s0,i0,L0):
        if (s == s0 && i == i0)
          return \true;
        else
          return pGENed(s,i+1,L0); }
  })

