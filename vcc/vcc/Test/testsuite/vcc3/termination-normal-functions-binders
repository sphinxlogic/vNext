  _(assume i > 0)

  while (i -= 1) 
    _(decreases i)
    _(invariant i > 0)
  {
    int k = \forall int z; bar(z);
  }
})


_(abstract int bar2(int k)
  _(recursive_with foo2)
  _(decreases 1)
{
})

_(void foo2()
  _(decreases 1)
{
  \integer i;
  _(assume i > 0)

  while (i -= 1) 
    _(decreases i)
    _(invariant i > 0)
  {
    int k = \forall int z; bar2(z);
  }
})


